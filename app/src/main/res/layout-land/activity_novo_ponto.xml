<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovoPonto">

    <EditText
        android:id="@+id/pontoproblema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/problema"
        app:layout_constraintBottom_toTopOf="@+id/Novoponto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/Novoponto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adicionarponto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737" />

    <RadioGroup
        android:layout_width="584dp"
        android:layout_height="251dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <RadioButton
            android:id="@+id/obrasN"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="@string/obras"
            tools:layout_editor_absoluteX="259dp"
            tools:layout_editor_absoluteY="201dp" />

        <RadioButton
            android:id="@+id/AcidenteN"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:text="@string/acidentes"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="110dp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>